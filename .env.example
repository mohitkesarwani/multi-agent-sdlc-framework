# ============================================
# MULTI-AGENT SDLC FRAMEWORK - ENVIRONMENT
# ============================================
# \ud83d\udfe5 CRITICAL: Copy this to .env and fill in actual values
# \ud83d\udfe5 NEVER commit .env to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_URI=mongodb://username:password@localhost:27017/sdlc_db
MONGO_DB_NAME=sdlc_db

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars

# ============================================
# API CONFIGURATION
# ============================================
NODE_ENV=development
API_PORT=5000
API_HOST=localhost
API_CORS_ORIGIN=http://localhost:5173

# ============================================
# FRONTEND CONFIGURATION
# ============================================
VITE_API_BASE_URL=http://localhost:5000/api

# ============================================
# AGENT ORCHESTRATOR SETTINGS
# ============================================
AGENT_LOG_LEVEL=info
AGENT_TIMEOUT_MS=30000
HUMAN_APPROVAL_TIMEOUT_MS=3600000
ENABLE_SECURITY_AUDIT=true

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_FORMAT=json
LOG_DIR=./logs

# ============================================
# OPTIONAL: Third-party Services
# ============================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# GITHUB_TOKEN=your_github_token_here
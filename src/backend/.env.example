# ===================================
# BACKEND ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and update with your actual values

# ===================================
# SERVER CONFIGURATION
# ===================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ===================================
# DATABASE CONFIGURATION
# ===================================
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/multi-agent-sdlc
MONGODB_TEST_URI=mongodb://localhost:27017/multi-agent-sdlc-test

# Database Options
DB_POOL_SIZE=10
DB_TIMEOUT_MS=30000

# ===================================
# JWT AUTHENTICATION
# ===================================
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# SECURITY CONFIGURATION
# ===================================
# CORS Settings
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Security
BCRYPT_ROUNDS=12

# Session Security
SESSION_SECRET=your-session-secret-change-this-in-production

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ===================================
# AGENT CONFIGURATION
# ===================================
# Agent API Keys (if using external agent services)
AGENT_API_KEY=your-agent-api-key
AGENT_WEBHOOK_URL=http://localhost:5000/api/webhooks/agents

# Agent Execution Settings
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_MS=300000

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@multi-agent-sdlc.com

# ===================================
# EXTERNAL SERVICES (Optional)
# ===================================
# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_SWAGGER_DOCS=true
ENABLE_METRICS=true
ENABLE_DEBUG_MODE=false
ENABLE_AGENT_ORCHESTRATION=true

# ===================================
# PRODUCTION SETTINGS (Only for Production)
# ===================================
# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_KEY=your-analytics-key

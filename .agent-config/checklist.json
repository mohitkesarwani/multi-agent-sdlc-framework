{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Quality and compliance checklists for Multi-Agent SDLC Framework",
  "checklist_categories": [
    {
      "categoryId": "code-quality",
      "name": "Code Quality",
      "description": "Standards and best practices for code quality",
      "items": [
        {
          "id": "CQ-001",
          "category": "code-quality",
          "description": "Code follows established coding standards and style guide",
          "priority": "high",
          "validation_criteria": {
            "method": "automated_linting",
            "tools": ["eslint", "prettier", "pylint"],
            "pass_threshold": "zero_violations"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": true
        },
        {
          "id": "CQ-002",
          "category": "code-quality",
          "description": "Code complexity is within acceptable limits (cyclomatic complexity < 10)",
          "priority": "high",
          "validation_criteria": {
            "method": "static_analysis",
            "tools": ["sonarqube", "code_climate"],
            "pass_threshold": "complexity_score_below_10"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": true
        },
        {
          "id": "CQ-003",
          "category": "code-quality",
          "description": "No code duplication exceeding 5% threshold",
          "priority": "medium",
          "validation_criteria": {
            "method": "duplication_analysis",
            "tools": ["jscpd", "sonarqube"],
            "pass_threshold": "duplication_below_5_percent"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": true
        },
        {
          "id": "CQ-004",
          "category": "code-quality",
          "description": "All functions and methods have clear, descriptive names",
          "priority": "medium",
          "validation_criteria": {
            "method": "manual_review",
            "checklist": ["names_are_descriptive", "naming_conventions_followed", "no_abbreviations_without_context"],
            "pass_threshold": "reviewer_approval"
          },
          "applicable_phases": ["code_review"],
          "automated": false
        },
        {
          "id": "CQ-005",
          "category": "code-quality",
          "description": "Code is modular with single responsibility principle applied",
          "priority": "high",
          "validation_criteria": {
            "method": "manual_review",
            "checklist": ["functions_have_single_purpose", "classes_are_cohesive", "separation_of_concerns_maintained"],
            "pass_threshold": "reviewer_approval"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": false
        },
        {
          "id": "CQ-006",
          "category": "code-quality",
          "description": "Error handling is comprehensive and appropriate",
          "priority": "high",
          "validation_criteria": {
            "method": "manual_review",
            "checklist": ["errors_caught_appropriately", "error_messages_meaningful", "no_silent_failures", "cleanup_in_finally_blocks"],
            "pass_threshold": "reviewer_approval"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": false
        },
        {
          "id": "CQ-007",
          "category": "code-quality",
          "description": "Code comments are present for complex logic only, code is self-documenting",
          "priority": "medium",
          "validation_criteria": {
            "method": "manual_review",
            "checklist": ["complex_logic_explained", "no_redundant_comments", "comments_accurate_and_current"],
            "pass_threshold": "reviewer_approval"
          },
          "applicable_phases": ["code_review"],
          "automated": false
        },
        {
          "id": "CQ-008",
          "category": "code-quality",
          "description": "No hardcoded values, use configuration or constants",
          "priority": "high",
          "validation_criteria": {
            "method": "code_inspection",
            "checklist": ["magic_numbers_eliminated", "strings_externalized", "configuration_used_appropriately"],
            "pass_threshold": "zero_hardcoded_values"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": true
        },
        {
          "id": "CQ-009",
          "category": "code-quality",
          "description": "Dead code and unused imports removed",
          "priority": "medium",
          "validation_criteria": {
            "method": "static_analysis",
            "tools": ["eslint", "unused-code-detector"],
            "pass_threshold": "zero_unused_code"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": true
        },
        {
          "id": "CQ-010",
          "category": "code-quality",
          "description": "Code is optimized for readability and maintainability over cleverness",
          "priority": "high",
          "validation_criteria": {
            "method": "manual_review",
            "checklist": ["code_is_clear", "no_obscure_tricks", "maintainability_considered"],
            "pass_threshold": "reviewer_approval"
          },
          "applicable_phases": ["code_review"],
          "automated": false
        }
      ]
    },
    {
      "categoryId": "security",
      "name": "Security",
      "description": "Security requirements and vulnerability prevention",
      "items": [
        {
          "id": "SEC-001",
          "category": "security",
          "description": "No hardcoded credentials, API keys, or sensitive data in code",
          "priority": "critical",
          "validation_criteria": {
            "method": "secrets_scanning",
            "tools": ["git-secrets", "truffleHog", "detect-secrets"],
            "pass_threshold": "zero_secrets_found"
          },
          "applicable_phases": ["implementation", "code_review", "pre_commit"],
          "automated": true,
          "blocking": true
        },
        {
          "id": "SEC-002",
          "category": "security",
          "description": "All user inputs are validated and sanitized",
          "priority": "critical",
          "validation_criteria": {
            "method": "code_review_and_testing",
            "checklist": ["input_validation_present", "sanitization_applied", "type_checking_enforced", "length_limits_applied"],
            "pass_threshold": "all_inputs_protected"
          },
          "applicable_phases": ["implementation", "code_review", "security_testing"],
          "automated": false,
          "blocking": true
        },
        {
          "id": "SEC-003",
          "category": "security",
          "description": "SQL injection prevention measures in place",
          "priority": "critical",
          "validation_criteria": {
            "method": "code_review_and_sast",
            "checklist": ["parameterized_queries_used", "orm_used_correctly", "no_dynamic_sql_concatenation"],
            "tools": ["sqlmap", "bandit", "sonarqube"],
            "pass_threshold": "zero_sql_injection_vectors"
          },
          "applicable_phases": ["implementation", "security_testing"],
          "automated": true,
          "blocking": true
        },
        {
          "id": "SEC-004",
          "category": "security",
          "description": "Cross-Site Scripting (XSS) prevention implemented",
          "priority": "critical",
          "validation_criteria": {
            "method": "code_review_and_dast",
            "checklist": ["output_encoding_applied", "csp_headers_configured", "template_escaping_enabled"],
            "tools": ["OWASP ZAP", "burp_suite"],
            "pass_threshold": "zero_xss_vulnerabilities"
          },
          "applicable_phases": ["implementation", "security_testing"],
          "automated": true,
          "blocking": true
        },
        {
          "id": "SEC-005",
          "category": "security",
          "description": "Authentication and authorization properly implemented",
          "priority": "critical",
          "validation_criteria": {
            "method": "security_review",
            "checklist": ["strong_password_policy", "multi_factor_auth_available", "session_management_secure", "authorization_checks_present", "principle_of_least_privilege"],
            "pass_threshold": "all_access_protected"
          },
          "applicable_phases": ["implementation", "security_testing"],
          "automated": false,
          "blocking": true
        },
        {
          "id": "SEC-006",
          "category": "security",
          "description": "Sensitive data encrypted at rest and in transit",
          "priority": "critical",
          "validation_criteria": {
            "method": "security_review",
            "checklist": ["tls_https_enforced", "database_encryption_enabled", "encryption_algorithms_current", "key_management_secure"],
            "pass_threshold": "all_sensitive_data_encrypted"
          },
          "applicable_phases": ["implementation", "security_testing"],
          "automated": true,
          "blocking": true
        },
        {
          "id": "SEC-007",
          "category": "security",
          "description": "No known vulnerable dependencies",
          "priority": "high",
          "validation_criteria": {
            "method": "dependency_scanning",
            "tools": ["npm_audit", "snyk", "dependabot", "OWASP_dependency_check"],
            "pass_threshold": "zero_high_severity_vulnerabilities"
          },
          "applicable_phases": ["implementation", "continuous_monitoring"],
          "automated": true,
          "blocking": true
        },
        {
          "id": "SEC-008",
          "category": "security",
          "description": "CSRF protection implemented for state-changing operations",
          "priority": "high",
          "validation_criteria": {
            "method": "security_review",
            "checklist": ["csrf_tokens_used", "same_site_cookies_configured", "state_changing_ops_protected"],
            "pass_threshold": "all_mutations_protected"
          },
          "applicable_phases": ["implementation", "security_testing"],
          "automated": false
        },
        {
          "id": "SEC-009",
          "category": "security",
          "description": "Security headers properly configured",
          "priority": "high",
          "validation_criteria": {
            "method": "automated_scanning",
            "checklist": ["content_security_policy", "x_frame_options", "strict_transport_security", "x_content_type_options"],
            "tools": ["securityheaders.com", "observatory"],
            "pass_threshold": "all_critical_headers_present"
          },
          "applicable_phases": ["deployment", "security_testing"],
          "automated": true
        },
        {
          "id": "SEC-010",
          "category": "security",
          "description": "Logging does not expose sensitive information",
          "priority": "high",
          "validation_criteria": {
            "method": "log_review",
            "checklist": ["no_passwords_logged", "no_pii_in_logs", "sensitive_data_masked", "log_injection_prevented"],
            "pass_threshold": "logs_sanitized"
          },
          "applicable_phases": ["implementation", "code_review"],
          "automated": false
        },
        {
          "id": "SEC-011",
          "category": "security",
          "description": "Rate limiting implemented for APIs and authentication endpoints",
          "priority": "medium",
          "validation_criteria": {
            "method": "security_review",
            "checklist": ["rate_limits_configured", "ddos_protection_enabled", "brute_force_protection"],
            "pass_threshold": "rate_limiting_active"
          },
          "applicable_phases": ["implementation", "security_testing"],
          "automated": true
        },
        {
          "id": "SEC-012",
          "category": "security",
          "description": "Security incident response plan documented and accessible",
          "priority": "medium",
          "validation_criteria": {
            "method": "documentation_review",
            "checklist": ["incident_plan_exists", "contact_info_current", "escalation_procedures_defined"],
            "pass_threshold": "plan_documented"
          },
          "applicable_phases": ["planning", "deployment"],
          "automated": false
        }
      ]
    },
    {
